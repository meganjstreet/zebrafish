<%= turbo_frame_tag :project_grid do %>
  <div class="card-home-cards" data-controller="masonry categories-list">
    <div class="loading">
      <%= image_tag 'logo-mark' %>
    </div>
    <div class="card-home-sizer"></div>
    <!-- This controls the column width -->
    <% projects.shuffle.each do |project| %>
      <%= link_to project_path(project), data: { turbo: "false" } do %>
        <div class="card-home-project hidden">
          <%= cl_image_tag project.key_visual.key %>
          <div class="home-project-info">
            <p class="project-name"><%= project.name.upcase %></p>
            <p class="project-category"><%= project.category.name.upcase %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
