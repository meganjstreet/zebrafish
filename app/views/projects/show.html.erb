<div class="container-project">
  <div class="show-featured-img">
    <%= cl_image_tag @project.key_visual.key, class: "img-main" %>
    <div class="show-project-info">
      <p class="show-project-client"><%= @project.title.upcase %></p>
      <p class="show-project-name"><%= @project.subtitle %></p>
    </div>
  </div>
</div>
<!-- Splide carousel -->
<div class="container-splide p-5">
  <section class="splide" aria-label="Splide Basic HTML Example">
    <div class="splide__track">
      <ul class="splide__list">
        <% @project.project_images.each do |image| %>
          <li class="splide__slide"><%= cl_image_tag image.key %></li>
        <% end %>
      </ul>
    </div>
  </section>
</div>
<% if @project.video_url %>
<div class="container-video" data-controller="vimeo">
  <div style="padding:56.25% 0 0 0;position:relative;">
    <iframe
      id="vimeo-player"
      src="https://player.vimeo.com/video/<%= @project.video_url %>?controls=0&loop=1&autopause=0&muted=1&h=ae2acfdee2&badge=0&player_id=0&app_id=58479"
      frameborder="0"
      allow="autoplay; fullscreen; picture-in-picture; clipboard-write"
      style="position:absolute;top:0;left:0;width:100%;height:100%;padding:28px;"
      data-vimeo-target="iframe">
    </iframe>
  </div>
  <script src="https://player.vimeo.com/api/player.js"></script>
<% end %>
