<div class="container-project">
  <div class="show-featured-img">
    <%= cl_image_tag @project.main_image.key, class: "img-main" %>
    <div class="show-project-info">
      <p class="show-project-client"><%= @project.client.upcase %></p>
      <p class="show-project-name"><%= @project.name %></p>
      <p class="show-project-campaign"><%= @project.campaign %></p>
    </div>
  </div>
</div>
<!-- Splide carousel -->
<div class="container-splide p-5">
  <section class="splide" aria-label="Splide Basic HTML Example">
    <div class="splide__track">
      <ul class="splide__list">
        <% @project.project_images.each do |image| %>
          <li class="splide__slide"><%= cl_image_tag image.key %></li>
        <% end %>
      </ul>
    </div>
  </section>
</div>
<div class="container-video">
  <div style="padding:56.25% 0 0 0;position:relative;"><iframe src="https://player.vimeo.com/video/<%= @project.video_url %>?controls=0?autoplay=1&loop=1&autopause=0?&amp;h=ae2acfdee2&amp;badge=0&amp;autopause=0&amp;player_id=0&amp;app_id=58479" frameborder="0" allow="autoplay; fullscreen; picture-in-picture; clipboard-write" style="position:absolute;top:0;left:0;width:100%;height:80%;"></iframe></div>
  <script src="https://player.vimeo.com/api/player.js"></script>
</div>
